class {{class_name}} < Formula
  desc "{{description}}"
  homepage "{{homepage}}"
  url "{{url}}"
  sha256 "{{sha256}}"
  license "{{license}}"

  depends_on "bash"

  livecheck do
    url :stable
    strategy :github_latest
  end

  def install
    bin.install "{{name}}"
    lib.install Dir["lib/*"]
    pkgshare.install "templates"
    man1.install "man/{{name}}.1"
  end

  test do
    out = shell_output("#{bin}/{{name}} -v")
    assert_match version.to_s, out
  end
end
